{
  "version": 2,
  "buildCommand": "npm run build",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html",
      "status": 200
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server$0"
    }
  ]
}
